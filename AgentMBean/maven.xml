<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:j="jelly:core" xmlns:ant="jelly:ant">
<postGoal name="dist:prepare-bin-filesystem">
<ant:property name="release.name" value="${pom.artifactId}-${pom.currentVersion}"/>
<ant:copy todir="${maven.build.dir}/${release.name}/bin/${release.name}">
   <ant:fileset dir="${maven.src.dir}/bin"/>
   <ant:filterset>
      <ant:filter token="JAR" value="${release.name}.jar"/>
   </ant:filterset>
</ant:copy>
<ant:copy todir="${maven.build.dir}/${release.name}/bin/${release.name}">
   <ant:fileset file="win32mbean.dll"/>
   <ant:fileset file="liblinuxmbean.so"/>
</ant:copy>
</postGoal>
</project>
